<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WowFontManager.ViewModels"
             xmlns:models="using:WowFontManager.Models"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
             x:Class="WowFontManager.Views.FontBrowserView"
             x:DataType="vm:FontBrowserViewModel">

    <Design.DataContext>
        <vm:FontBrowserViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#E8E8E8" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Left: Load button -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                    <Button Content="Load Fonts" Command="{Binding LoadFontsCommand}" />
                    <ProgressBar IsIndeterminate="True" IsVisible="{Binding IsLoading}" Width="100" Height="20" VerticalAlignment="Center" />
                </StackPanel>
                
                <!-- Right: WoW Installation Path -->
                <TextBlock Grid.Column="2" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"
                           Margin="0,0,10,0"
                           Foreground="#1A1A1A">
                    <Run Text="WoW Install Path: " />
                    <Run Text="{Binding WowInstallPath}" />
                </TextBlock>
            </Grid>
        </Border>

        <!-- Three-panel layout -->
        <Grid Grid.Row="1" ColumnDefinitions="300,*,200">
            <!-- Left Panel: Font List -->
            <Border Grid.Column="0" Background="White" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0" Padding="5">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Font Folders" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="5,5,5,10"
                               Foreground="#1A1A1A" />
                    
                    <TreeView ItemsSource="{Binding FontTree}"
                              SelectedItem="{Binding SelectedItem}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <TreeView.Styles>
                            <!-- All text always uses dark color for good contrast -->
                            <Style Selector="TreeViewItem TextBlock">
                                <Setter Property="Foreground" Value="#1A1A1A" />
                            </Style>
                            <!-- Selected item with slightly darker gray background for better readability -->
                            <Style Selector="TreeViewItem:selected /template/ Border#PART_LayoutRoot">
                                <Setter Property="Background" Value="#E0E0E0" />
                            </Style>
                            <!-- Hover effect with light gray -->
                            <Style Selector="TreeViewItem:pointerover /template/ Border#PART_LayoutRoot">
                                <Setter Property="Background" Value="#F5F5F5" />
                            </Style>
                        </TreeView.Styles>
                        <TreeView.ItemTemplate>
                            <TreeDataTemplate ItemsSource="{Binding Children}" x:DataType="models:FontTreeNode">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <!-- Folder icon for folder nodes -->
                                    <TextBlock Text="📁" 
                                               FontSize="14"
                                               IsVisible="{Binding NodeType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:FontTreeNodeType.Folder}}" />
                                    <!-- Font icon for font nodes -->
                                    <TextBlock Text="🔤" 
                                               FontSize="14"
                                               IsVisible="{Binding NodeType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:FontTreeNodeType.Font}}" />
                                    <!-- Display text -->
                                    <TextBlock Text="{Binding DisplayText}" 
                                               FontWeight="{Binding NodeType, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:FontTreeNodeType.Folder}}"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </TreeDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </DockPanel>
            </Border>

            <!-- Center Panel: Font Preview -->
            <Border Grid.Column="1" Background="#F0F0F0" Padding="20">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Font Preview" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="0,0,0,15"
                               Foreground="#1A1A1A" />
                    
                    <!-- Preview Image -->
                    <Border Background="White" 
                            BorderBrush="#DDDDDD" 
                            BorderThickness="1" 
                            CornerRadius="4"
                            Padding="10">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Auto">
                            <Panel>
                                <!-- Preview Image -->
                                <Image Source="{Binding PreviewImage}" 
                                       Stretch="None"
                                       IsVisible="{Binding PreviewImage, Converter={x:Static ObjectConverters.IsNotNull}}" />
                                
                                <!-- Placeholder when no font selected -->
                                <TextBlock Text="Select a font from the list to preview" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           FontSize="16"
                                           Foreground="#4A4A4A"
                                           IsVisible="{Binding PreviewImage, Converter={x:Static ObjectConverters.IsNull}}" />
                            </Panel>
                        </ScrollViewer>
                    </Border>
                </DockPanel>
            </Border>

            <!-- Right Panel: Apply Font Actions -->
            <Border Grid.Column="2" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="1,0,0,0" Padding="15">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Apply Font" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="0,0,0,15"
                               Foreground="#1A1A1A" />
                    
                    <!-- Action Buttons -->
                    <StackPanel Spacing="10">
                        <!-- All UI Fonts Button -->
                        <Button Content="All UI Fonts"
                                Command="{Binding ApplyFontCommand}"
                                CommandParameter="{x:Static models:FontCategory.All}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Padding="10,8"
                                ToolTip.Tip="Apply this font to all WoW UI font files">
                            <Button.Styles>
                                <Style Selector="Button">
                                    <Setter Property="Background" Value="#FFFFFF" />
                                    <Setter Property="Foreground" Value="#1A1A1A" />
                                    <Setter Property="BorderBrush" Value="#CCCCCC" />
                                    <Setter Property="BorderThickness" Value="1" />
                                </Style>
                                <Style Selector="Button:disabled">
                                    <Setter Property="Background" Value="#E8E8E8" />
                                    <Setter Property="Foreground" Value="#999999" />
                                </Style>
                                <Style Selector="Button:pointerover:not(:disabled)">
                                    <Setter Property="Background" Value="#E3F2FD" />
                                </Style>
                            </Button.Styles>
                        </Button>

                        <!-- Main UI Only Button -->
                        <Button Content="Main UI Only"
                                Command="{Binding ApplyFontCommand}"
                                CommandParameter="{x:Static models:FontCategory.MainUI}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Padding="10,8"
                                ToolTip.Tip="Apply this font to Main UI fonts (menus, tooltips, general UI)">
                            <Button.Styles>
                                <Style Selector="Button">
                                    <Setter Property="Background" Value="#FFFFFF" />
                                    <Setter Property="Foreground" Value="#1A1A1A" />
                                    <Setter Property="BorderBrush" Value="#CCCCCC" />
                                    <Setter Property="BorderThickness" Value="1" />
                                </Style>
                                <Style Selector="Button:disabled">
                                    <Setter Property="Background" Value="#E8E8E8" />
                                    <Setter Property="Foreground" Value="#999999" />
                                </Style>
                                <Style Selector="Button:pointerover:not(:disabled)">
                                    <Setter Property="Background" Value="#E3F2FD" />
                                </Style>
                            </Button.Styles>
                        </Button>

                        <!-- Chat Only Button -->
                        <Button Content="Chat Only"
                                Command="{Binding ApplyFontCommand}"
                                CommandParameter="{x:Static models:FontCategory.Chat}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Padding="10,8"
                                ToolTip.Tip="Apply this font to Chat window fonts">
                            <Button.Styles>
                                <Style Selector="Button">
                                    <Setter Property="Background" Value="#FFFFFF" />
                                    <Setter Property="Foreground" Value="#1A1A1A" />
                                    <Setter Property="BorderBrush" Value="#CCCCCC" />
                                    <Setter Property="BorderThickness" Value="1" />
                                </Style>
                                <Style Selector="Button:disabled">
                                    <Setter Property="Background" Value="#E8E8E8" />
                                    <Setter Property="Foreground" Value="#999999" />
                                </Style>
                                <Style Selector="Button:pointerover:not(:disabled)">
                                    <Setter Property="Background" Value="#E3F2FD" />
                                </Style>
                            </Button.Styles>
                        </Button>

                        <!-- Damage Numbers Only Button -->
                        <Button Content="Damage Numbers Only"
                                Command="{Binding ApplyFontCommand}"
                                CommandParameter="{x:Static models:FontCategory.Damage}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Padding="10,8"
                                ToolTip.Tip="Apply this font to Damage number fonts (floating combat text)">
                            <Button.Styles>
                                <Style Selector="Button">
                                    <Setter Property="Background" Value="#FFFFFF" />
                                    <Setter Property="Foreground" Value="#1A1A1A" />
                                    <Setter Property="BorderBrush" Value="#CCCCCC" />
                                    <Setter Property="BorderThickness" Value="1" />
                                </Style>
                                <Style Selector="Button:disabled">
                                    <Setter Property="Background" Value="#E8E8E8" />
                                    <Setter Property="Foreground" Value="#999999" />
                                </Style>
                                <Style Selector="Button:pointerover:not(:disabled)">
                                    <Setter Property="Background" Value="#E3F2FD" />
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <!-- Separator -->
                        <Border Height="1" Background="#DDDDDD" Margin="0,15,0,10" />
                        
                        <!-- WoW Install Root Button -->
                        <Button Content="WoW Install Root"
                                Command="{Binding SelectWoWInstallPathCommand}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Padding="10,8"
                                ToolTip.Tip="Select WoW installation directory">
                            <Button.Styles>
                                <Style Selector="Button">
                                    <Setter Property="Background" Value="#FFFFFF" />
                                    <Setter Property="Foreground" Value="#1A1A1A" />
                                    <Setter Property="BorderBrush" Value="#CCCCCC" />
                                    <Setter Property="BorderThickness" Value="1" />
                                </Style>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#F5F5F5" />
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <!-- Google Fonts API Button -->
                        <Button Content="Google Fonts API"
                                Command="{Binding SetGoogleFontsApiKeyCommand}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Padding="10,8"
                                ToolTip.Tip="Set Google Fonts API key">
                            <Button.Styles>
                                <Style Selector="Button">
                                    <Setter Property="Background" Value="#FFFFFF" />
                                    <Setter Property="Foreground" Value="#1A1A1A" />
                                    <Setter Property="BorderBrush" Value="#CCCCCC" />
                                    <Setter Property="BorderThickness" Value="1" />
                                </Style>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#F5F5F5" />
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#E8E8E8" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center" 
                           FontSize="12"
                           Foreground="#1A1A1A" />
                <TextBlock Grid.Column="1" 
                           VerticalAlignment="Center" 
                           FontSize="12"
                           Foreground="#1A1A1A">
                    <Run Text="Folders: " />
                    <Run Text="{Binding FontTree.Count}" FontWeight="Bold" />
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
